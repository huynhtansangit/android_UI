<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_youraddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fontFamily="@font/abhaya_libre"
        android:textSize="20dp"
        android:textStyle="bold">

    <EditText
        android:id="@+id/et_youraddress"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/abhaya_libre"
        android:hint="Address"
        android:textColorHint="@color/red"
        android:textStyle="bold" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_phoneprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fontFamily="@font/abhaya_libre"
        android:textSize="20dp"
        android:textStyle="bold">

        <EditText
            android:id="@+id/et_phoneprofile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/abhaya_libre"
            android:hint="Phone number"
            android:textColorHint="@color/red"
            android:inputType="text"
            android:textStyle="bold" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_genderr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fontFamily="@font/abhaya_libre"
        android:textSize="20dp"
        android:textStyle="bold">
    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <RadioButton
            android:id="@+id/rbtn_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:paddingLeft="10dp"
            />
        <RadioButton
            android:id="@+id/rbtn_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:paddingLeft="10dp"
            android:layout_marginLeft="30dp"/>
        <RadioButton
            android:id="@+id/rbtn_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other"
            android:paddingLeft="10dp"
            android:layout_marginLeft="30dp"/>
    </RadioGroup>
        <TextView
            android:id="@+id/tv_gender_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male..."
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_faceadd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fontFamily="@font/abhaya_libre"
        android:textSize="20dp"
        android:textStyle="bold">

        <EditText
            android:id="@+id/et_faceadd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/abhaya_libre"
            android:hint="Facebook address"
            android:inputType="text"
            android:textColorHint="@color/red"
            android:textStyle="bold" />
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:id="@+id/ln_getpathImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fontFamily="@font/abhaya_libre"
        android:textSize="20dp"
        android:textStyle="bold"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_pathImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/abhaya_libre"
            android:text="Path of image"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_pickImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_gradient_button"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="Pick\n avatar"
            android:textSize="10sp"
            android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Control highlight-->
        <item name="android:colorControlHighlight">#87CEEB</item>
    </style>
    <style name="Theme_custom" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryDark">@color/Primary_color</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Control highlight-->
        <item name="android:colorControlHighlight">#87CEEB</item>
    </style>
    <style name="NavigationStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/chela_one</item>
        <item name="android:listPreferredItemHeightSmall">45dp</item>
        <item name="listPreferredItemHeightSmall">45dp</item>
        <item name="android:checkable">true</item>
    </style>
</resources>
